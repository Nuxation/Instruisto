{% block form_row %}

	<div class="form-group">
		{{ form_label(form) }}
		{{ form_widget(form) }}
	</div>
{% endblock %}

{% block _annonce_creneaus_label %}
		{{ form_label(form, "Créneaux") }}
{% endblock %}

{% block _annonce_creneaus_widget %}
	{{ form_widget(form) }}
	<input type="hidden" id="widgets-counter" value="0">
	<div class="form-group">
		<button type="button" id="add-creneau" class="btn btn-primary">
			Ajouter un créneau
		</button>
	</div>
{% endblock %}

{% block _annonce_creneaus_entry_row %}
	{{ form_widget(form) }}
{% endblock %}

{% block _annonce_creneaus_entry_widget %}
	<div class="form-group" id="block_{{id}}">
		<div class="row">
			<div class="col-10">
				<div class="row">
					<div class="col">
						{{ form_widget(form.debutAt) }}
						{{ form_errors(form.debutAt) }}
					</div>
					<div class="col">
						{{ form_widget(form.finAt) }}
						{{ form_errors(form.finAt) }}
					</div>
				</div>
			</div>
			<div class="col-2">
				<button class="btn btn-danger" type="button" data-action="delete" data-target="#block_{{id}}">X</button>
			</div>
		</div>
	</div>
{% endblock %}
