{% extends 'base.html.twig' %}

{% block title %}Page d'acceuil
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row mt-5">
			<div class="col-sm-6">
				<h3>Votre parcours vers la réussite</h3>
				<h5 class="mb-5">Développez vos compétences et trouvez votre professeur</h5>
				<a href="{{path('app_register')}}" class="btn btn-primary mx-2 my-2 my-sm-0">Inscrivez-vous gratuitement</a>
			</div>
			<div class="col-sm-6">
				<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" >
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img class="d-block imgCarrousel" src="assets/images/carousel/0.png" alt="First slide">
						</div>
						<div class="carousel-item">
							<img class="d-block imgCarrousel" src="assets/images/carousel/1.png" alt="First slide">
						</div>
					</div>
					<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon"></span>
					</a>
					<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
						<span class="carousel-control-next-icon"></span>
					</a>
				</div>
			</div>
		</div>
		<div class="row justify-content-center mt-5">
			<h5>Découvrez comment trouver facilement votre professeur particulier idéal</h5>
		</div>
	</div>
{% endblock %}
